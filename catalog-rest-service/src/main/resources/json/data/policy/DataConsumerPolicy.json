{
  "name": "DataConsumerPolicy",
  "displayName": "Data Consumer Policy",
  "fullyQualifiedName": "DataConsumerPolicy",
  "description": "Policy for Data Consumer to perform operations on metadata entities",
  "policyType": "AccessControl",
  "enabled": true,
  "rules": [
    {
      "name": "DataConsumerPolicy-edit",
      "resources" : ["all"],
      "operations": ["EditDescription", "EditOwner", "EditTags"],
      "effect": "allow"
    },
    {
      "name": "DataConsumerPolicy-editOwner",
      "resources" : ["all"],
      "operations": ["EditOwner"],
      "effect": "allow",
      "condition": "#noOwner() || #matchOwner()"
    }
  ]
}