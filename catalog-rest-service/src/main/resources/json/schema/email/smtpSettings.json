{
  "$id": "https://open-metadata.org/schema/entity/configuration/smtpSettings.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmtpSettings",
  "description": "This schema defines the SMTP Settings for sending Email",
  "type": "object",
  "javaType": "org.openmetadata.catalog.email.SmtpSettings",
  "properties": {
    "enableSmtpServer": {
      "description": "If this is enable password will details will be shared on mail",
      "type": "boolean",
      "default": false
    },
    "openMetadataUrl": {
      "description": "Openmetadata Server Endpoint",
      "type": "string"
    },
    "serverEndpoint": {
      "description": "Smtp Server Endpoint",
      "type": "string"
    },
    "serverPort": {
      "description": "Smtp Server Endpoint",
      "type": "integer"
    },
    "username": {
      "description": "Smtp Server Username",
      "type": "string"
    },
    "password": {
      "description": "Smtp Server Password",
      "type": "string"
    },
    "transportationStrategy": {
      "type": "string",
      "enum": ["SMTP", "SMPTS", "SMTP_TLS"],
      "default": "SMTP"
    }
  },
  "additionalProperties": false,
  "required": ["serverEndpoint", "serverPort", "username", "password"]
}