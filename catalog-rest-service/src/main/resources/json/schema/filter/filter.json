{
  "$id": "https://open-metadata.org/schema/filter/filter.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Filter",
  "description": "This schema defines the Filter entity. A filter controls the publishing of different change events in OpenMetadata",
  "type": "object",
  "javaType": "org.openmetadata.catalog.filter.Filter",
  "definitions": {
    "filteringScheme": {
      "javaType": "org.openmetadata.catalog.filter.FilteringScheme",
      "description": "This schema defines Scheme for the filter",
      "type": "string",
      "enum": [
        "allowOnlyFromList",
        "entitySpecificFromList"
      ],
      "default": "entitySpecificFromList"
    },
    "eventfiltersType": {
      "javaType": "org.openmetadata.catalog.filter.FiltersType",
      "description": "This schema defines all possible filters enum in OpenMetadata.",
      "type": "string",
      "enum": [
        "entityCreated",
        "followEntity",
        "unfollowEntity",
        "updatedescription",
        "updatetags",
        "updateowner",
        "updatetier",
        "addtags",
        "removetags",
        "softdeleteentity",
        "testcases",
        "usagesummary",
        "sampledata",
        "queries",
        "excludeFromBots",
        "entityDeleted",
        "updateEventFilters"
      ]
    },
    "basicFilter": {
      "javaType": "org.openmetadata.catalog.filter.BasicFilter",
      "description": "Represents a basic filter which has a Name and a flag to indicate if enabled",
      "type": "object",
      "properties": {
        "filterName": {
          "description": "Name of the filter",
          "type": "string"
        },
        "filterType": {
          "description": "Type of the filter",
          "$ref": "#/definitions/eventfiltersType"
        },
        "enabled": {
          "description": "Is the Filter Enabled",
          "type": "boolean",
          "default": true
        }
      },
      "required": ["filterType"],
      "additionalProperties": false
    },
    "entityFilter": {
      "javaType": "org.openmetadata.catalog.filter.EntityFilter",
      "description": "Represents a Filter attached to a entity.",
      "type": "object",
      "properties": {
        "entityType": {
          "description": "Entity type for filter , example : topic , table, dashboard, mlmodel , etc",
          "type": "string"
        },
        "eventFilter": {
          "description": "List of operations supported by the resource.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/basicFilter"
          }
        }
      },
      "required": ["entityType"],
      "additionalProperties": false
    }
  },
  "properties": {
    "filteringScheme": {
      "description": "Scheme to be used for Filtering",
      "$ref": "#/definitions/filteringScheme"
    },
    "entityFilters": {
      "description": "List of Entity Filters",
      "type": "array",
      "items": {
        "$ref": "#/definitions/entityFilter"
      }
    }
  },
  "required": ["filteringScheme"],
  "additionalProperties": false
}
