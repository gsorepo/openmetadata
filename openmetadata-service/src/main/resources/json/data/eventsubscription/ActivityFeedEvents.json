{
  "name": "ActivityFeedAlert",
  "fullyQualifiedName": "ActivityFeedAlert",
  "displayName": "Activity Feed Alerts",
  "description": "Alerts received on the Activity Feed are controlled with this.",
  "alertType": "ActivityFeed",
  "filteringRules":{
    "resources": ["all"],
    "rules": [
      {
        "name": "matchAnySource",
        "effect": "include",
        "condition": "matchAnySource({'chart','container','dashboard','dashboardDataModel','database','databaseSchema','glossary','glossaryTerm','mlmodel','pipeline','query','report','searchIndex','storedProcedure','table','topic','testSuite','testCase', 'domain', 'dataProduct'})"
      },
      {
        "name": "matchUpdatedBy",
        "effect": "exclude",
        "condition": "matchUpdatedBy({'ingestion-bot'})"
      },
      {
        "name": "matchAnyFieldChange",
        "effect": "include",
        "condition": "matchAnyFieldChange({'description', 'domain', 'owner', 'tags', 'followers', 'extension','parameterValues', 'assets'})"
      }
    ]
  },
  "destinations": [
    {
      "id": "fc9e7a84-5dbd-4e63-8b78-6c3a7bf04a65",
      "category": "External",
      "type": "ActivityFeed"
    }
  ],
  "input": {
    "filters": [
      {
        "name": "filterBySource",
        "effect" : "include",
        "arguments": [
          {
            "name": "sourceList",
            "input": [
              "chart",
              "container",
              "dashboard",
              "dashboardDataModel",
              "database",
              "databaseSchema",
              "glossary",
              "glossaryTerm",
              "mlmodel",
              "pipeline",
              "query",
              "report",
              "searchIndex",
              "storedProcedure",
              "table",
              "topic",
              "testSuite",
              "testCase",
              "domain",
              "dataProduct"
            ]
          }
        ]
      },
      {
        "name": "filterByUpdaterName",
        "effect" : "exclude",
        "arguments": [
          {
            "name": "updateByUserList",
            "input": [
              "ingestion-bot"
            ]
          }
        ]
      },
      {
        "name": "filterByFieldChange",
        "effect" : "include",
        "arguments": [
          {
            "name": "fieldChangeList",
            "input": [
              "description",
              "domain",
              "owner",
              "tags",
              "followers",
              "extension",
              "parameterValues"
            ]
          }
        ]
      }
    ]
  },
  "provider" : "system",
  "pollInterval" : 30,
  "enabled" : true
}