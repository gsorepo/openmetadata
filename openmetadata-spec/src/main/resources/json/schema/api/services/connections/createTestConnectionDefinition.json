{
  "$id": "https://open-metadata.org/schema/entity/services/connections/createTestConnectionDefinition.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TestConnectionDefinitionRequest",
  "description": "Create a Test Connection Definition for a service.",
  "type": "object",
  "javaType": "org.openmetadata.schema.entity.services.connections.CreateTestConnectionDefinition",
  "javaInterfaces": ["org.openmetadata.schema.CreateEntity"],
  "properties": {
    "name": {
      "description": "Name of the Test Connection Definition. It should be the `type` of the service being tested, e.g., Mysql, or Snowflake.",
      "type": "string"
    },
    "displayName": {
      "description": "Display Name that identifies this test definition.",
      "type": "string"
    },
    "steps": {
      "description": "Steps to test the connection. Order matters.",
      "type": "array",
      "items": {
        "$ref": "../../../entity/services/connections/testConnectionDefinition.json#/definitions/testConnectionStep"
      }
    },
    "owner": {
      "description": "Owner of this TestConnection definition.",
      "$ref": "../../../type/entityReference.json",
      "default": null
    }
  },
  "additionalProperties": false,
  "required": ["name", "steps"]
}