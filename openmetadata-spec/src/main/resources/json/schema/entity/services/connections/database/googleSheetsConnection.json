{
    "$id": "https://open-metadata.org/schema/entity/services/connections/database/googleSheetsConnection.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GoogleSheetsConnection",
    "description": "Google Sheets Connection Config",
    "type": "object",
    "javaType": "org.openmetadata.schema.services.connections.database.GoogleSheetsConnection",
    "definitions": {
      "googleSheetsType": {
        "description": "Service type.",
        "type": "string",
        "enum": [
          "GoogleSheets"
        ],
        "default": "GoogleSheets"
      },
      "googleSheetsScheme": {
        "description": "SQLAlchemy driver scheme options.",
        "type": "string",
        "enum": [
          "googlesheets"
        ],
        "default": "googlesheets"
      }
    },
    "properties": {
      "type": {
        "title": "Service Type",
        "description": "Service Type",
        "$ref": "#/definitions/googleSheetsType",
        "default": "GoogleSheets"
      },
      "scheme": {
        "title": "Connection Scheme",
        "description": "SQLAlchemy driver scheme options.",
        "$ref": "#/definitions/googleSheetsScheme",
        "default": "googlesheets"
      },
      "databaseName": {
        "title": "Database Name",
        "description": "Optional name to give to the database in OpenMetadata. If left blank, we will use 'default'.",
        "type": "string",
        "default": "default"
      },
      "credentials": {
        "title": "GCP Credentials",
        "description": "GCP Credentials to connect to Google Sheets API",
        "$ref": "../../../../security/credentials/gcpCredentials.json"
      },
      "scopes": {
        "title": "OAuth Scopes",
        "description": "Google Sheets API scopes",
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "https://www.googleapis.com/auth/spreadsheets.readonly",
          "https://www.googleapis.com/auth/drive.readonly"
        ]
      },
      "sheetFilterPattern": {
        "title": "Sheet Filter Pattern",
        "description": "Regex to include/exclude Google Sheets that match the pattern.",
        "$ref": "../../../../type/filterPattern.json#/definitions/filterPattern"
      },
      "folderFilterPattern": {
        "title": "Folder Filter Pattern",
        "description": "Regex to include/exclude Google Drive folders that match the pattern.",
        "$ref": "../../../../type/filterPattern.json#/definitions/filterPattern"
      },
      "includeSharedDrives": {
        "title": "Include Shared Drives",
        "description": "Include sheets from shared drives",
        "type": "boolean",
        "default": true
      },
      "connectionOptions": {
        "title": "Connection Options",
        "$ref": "../connectionBasicType.json#/definitions/connectionOptions"
      },
      "connectionArguments": {
        "title": "Connection Arguments",
        "$ref": "../connectionBasicType.json#/definitions/connectionArguments"
      },
      "supportsMetadataExtraction": {
        "title": "Supports Metadata Extraction",
        "$ref": "../connectionBasicType.json#/definitions/supportsMetadataExtraction"
      },
      "supportsIncrementalMetadataExtraction": {
        "title": "Supports Incremental Metadata Extraction",
        "$ref": "../connectionBasicType.json#/definitions/supportsIncrementalMetadataExtraction"
      },
      "supportsProfiler": {
        "title": "Supports Profiler",
        "$ref": "../connectionBasicType.json#/definitions/supportsProfiler"
      },
      "sampleDataStorageConfig": {
        "title": "Storage Config for Sample Data",
        "$ref": "../connectionBasicType.json#/definitions/sampleDataStorageConfig"
      }
    },
    "additionalProperties": false,
    "required": [
      "credentials"
    ]
  }