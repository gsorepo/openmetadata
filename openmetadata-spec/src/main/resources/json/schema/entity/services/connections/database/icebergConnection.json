{
  "$id": "https://open-metadata.org/schema/entity/services/connections/database/icebergConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IcebergConnection",
  "description": "Iceberg Catalog Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.database.IcebergConnection",
  "definitions": {
    "icebergType": {
      "description": "Service type.",
      "type": "string",
      "enum": [
        "Iceberg"
      ],
      "default": "Iceberg"
    },
    "hiveCatalogConfig": {
      "title": "Hive Catalog Configuration",
      "description": "Configuration for using Hive as the Iceberg catalog.",
      "type": "object",
      "properties": {
        "uri": {
          "title": "Uri",
          "description": "Uri to the Hive Metastore",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "uri"
      ]
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "$ref": "#/definitions/icebergType",
      "default": "Iceberg"
    },
    "catalog": {
      "title": "Catalog",
      "description": "Iceberg Catalog configuration.",
      "type": "object",
      "properties": {
        "catalog_name": {
          "title": "Name",
          "description": "Catalog Name.",
          "type": "string"
        },
        "catalog_type": {
          "title": "Type",
          "description": "Catalog Type.",
          "type": "string",
          "enum": [
            "Hive"
          ]
        },
        "catalog_config": {
          "title": "Config",
          "description": "Catalog configuration, depending on your catalog type, as per PyIceberg.",
          "oneOf": [
            {
              "$ref": "#/definitions/hiveCatalogConfig"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "catalog_config",
        "catalog_name",
        "catalog_type"
      ]
    },
    "ownership_property": {
      "title": "Ownership Property",
      "description": "Table property to look for the Owner.",
      "type": "string",
      "default": "owner"
    },
    "supportsMetadataExtraction": {
      "title": "Supports Metadata Extraction",
      "$ref": "../connectionBasicType.json#/definitions/supportsMetadataExtraction"
    }
  },
  "additionalProperties": false,
  "required": [
    "catalog"
  ]
}
