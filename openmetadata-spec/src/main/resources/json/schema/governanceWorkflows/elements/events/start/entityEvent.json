{
  "$id": "https://open-metadata.org/schema/governanceWorkflows/elements/events/start/entityEvent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EntityEvent",
  "description": "Entity start event.",
  "type": "object",
  "javaType": "org.openmetadata.schema.governanceWorkflows.elements.events.start.EntityEvent",
  "properties": {
    "type": {
      "description": "Start Event Type.",
      "type": "string",
      "enum": [
        "ENTITY"
      ],
      "default": "ENTITY"
    },
    "name": {
      "description": "Name that identifies this Event.",
      "$ref": "../../../../type/basic.json#/definitions/entityName"
    },
    "displayName": {
      "description": "Display Name that identifies this Event.",
      "type": "string"
    },
    "description": {
      "description": "Description of the Event.",
      "$ref": "../../../../type/basic.json#/definitions/markdown"
    },
    "config": {
      "description": "Event configuration.",
      "type": "object",
      "properties": {
        "entityTypes": {
          "description": "Entity Type to Filter.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "events": {
          "description": "Events to Filter.",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "CREATED",
              "UPDATED"
            ]
          }
        }
      },
      "required": ["entityTypes", "events"],
      "additionalProperties": false
    },
    "output": {
      "entityType": {
        "description": "Entity Type.",
        "type": "string"
      },
      "relatedEntity": {
        "description": "Entity that was created.",
        "$ref": "../../../../type/entityReference.json"
      }
    }
  },
  "required": ["type", "name", "config"],
  "additionalProperties": false
}
