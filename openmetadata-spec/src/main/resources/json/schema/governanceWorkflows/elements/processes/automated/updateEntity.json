{
  "$id": "https://open-metadata.org/schema/governanceWorkflows/elements/processes/automated/updateEntity.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UpdateEntity",
  "description": "Update Entity process.",
  "type": "object",
  "javaType": "org.openmetadata.schema.governanceWorkflows.elements.processes.automated.UpdateEntity",
  "properties": {
    "type": {
      "description": "Process Type.",
      "type": "string",
      "enum": [
        "UPDATE_ENTITY"
      ],
      "default": "UPDATE_ENTITY"
    },
    "name": {
      "description": "Name that identifies this Process.",
      "$ref": "../../../../type/basic.json#/definitions/entityName"
    },
    "displayName": {
      "description": "Display Name that identifies this Process.",
      "type": "string"
    },
    "description": {
      "description": "Description of the Process.",
      "$ref": "../../../../type/basic.json#/definitions/markdown"
    },
    "config": {
      "description": "Process configuration.",
      "type": "object",
      "properties": {
        "updates": {
          "description": "Updates to apply.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "description": "Attribute to Update.",
                "type": "string"
              },
              "value": {
                "description": "New Value.",
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["updates"],
      "additionalProperties": false
    },
    "input": {
      "entityType": {
        "description": "Entity Type.",
        "type": "string"
      },
      "relatedEntity": {
        "description": "Entity.",
        "$ref": "../../../../type/entityReference.json"
      }
    }
  },
  "required": ["type", "name", "config"],
  "additionalProperties": false
}
