{
  "$id": "https://open-metadata.org/schema/governanceWorkflows/elements/processes/user/approval.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Approval",
  "description": "Require User Approval",
  "type": "object",
  "javaType": "org.openmetadata.schema.governanceWorkflows.elements.processes.user.Approval",
  "properties": {
    "type": {
      "description": "Process Type.",
      "type": "string",
      "enum": [
        "APPROVAL"
      ],
      "default": "APPROVAL"
    },
    "name": {
      "description": "Name that identifies this process.",
      "$ref": "../../../../type/basic.json#/definitions/entityName"
    },
    "displayName": {
      "description": "Display Name that identifies this process.",
      "type": "string"
    },
    "description": {
      "description": "Description of the process.",
      "$ref": "../../../../type/basic.json#/definitions/markdown"
    },
    "config": {
      "assignees": {
        "description": "List of assignees.",
        "type": "object",
        "properties": {
          "addReviewers": {
            "description": "Add the Reviewers to the assignees list.",
            "type": "boolean",
            "default": false
          },
          "extraAssignees": {
            "description": "Manually add specific assignees.",
            "type": "array",
            "items": {
              "$ref": "../../../../type/entityReferenceList.json"
            }
          }
        },
        "additionalProperties": false
      },
      "approveType": {
        "description": "If 'ANY', only one person has to approve it. If 'ALL', everyone has to approve it.",
        "type": "string",
        "enum": [
          "ANY",
          "ALL"
        ],
        "default": "ANY"
      }
    },
    "input": {
      "entityType": {
        "description": "Entity Type.",
        "type": "string"
      },
      "relatedEntity": {
        "description": "Entity.",
        "$ref": "../../../../type/entityReference.json"
      }
    },
    "output": {
      "approved": {
        "description": "True if Approved. False otherwise.",
        "type": "boolean"
      }
    }
  },
  "required": ["type", "name", "config"],
  "additionalProperties": false
}
