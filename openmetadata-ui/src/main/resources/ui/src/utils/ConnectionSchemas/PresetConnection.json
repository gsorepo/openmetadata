{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PresetConnection",
  "description": "Preset Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.dashboard.PresetConnection",
  "definitions": {
    "presetType": {
      "description": "Preset service type",
      "type": "string",
      "enum": ["Preset"],
      "default": "Preset"
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "default": "Preset",
      "type": "string",
      "enum": ["Preset"]
    },
    "hostPort": {
      "expose": true,
      "title": "Host and Port",
      "description": "URL for the preset instance.",
      "type": "string",
      "format": "uri",
      "default": "http://localhost:8088"
    },
    "connection": {
      "title": "Preset Connection",
      "description": "Choose between API or database connection fetch metadata from preset.",
      "oneOf": [
        {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "PresetApiConnection",
          "description": "Preset API Connection Config",
          "type": "object",
          "definitions": {
            "apiProvider": {
              "title": "Provider",
              "description": "Authentication provider for the Preset service. For basic token/secret authentication, the default value `db` can be used. This parameter is used internally to connect to Preset's REST API.",
              "type": "string",
              "enum": ["db", "ldap"],
              "default": "db"
            }
          },
          "properties": {
            "provider": {
              "title": "Provider",
              "description": "Authentication provider for the Preset service. For basic token/secret authentication, the default value `db` can be used. This parameter is used internally to connect to Preset's REST API.",
              "default": "db",
              "type": "string",
              "enum": ["db", "ldap"]
            },
            "api_token": {
              "title": "API Token",
              "description": "API token for Preset.",
              "type": "string"
            },
            "api_secret": {
              "title": "API secret",
              "description": "API secret for Preset.",
              "type": "string",
              "format": "password"
            },
            "verifySSL": {
              "title": "Verify SSL",
              "default": "no-ssl",
              "description": "Client SSL verification. Make sure to configure the SSLConfig if enabled.",
              "javaType": "org.openmetadata.schema.security.ssl.VerifySSL",
              "type": "string",
              "enum": ["no-ssl", "ignore", "validate"]
            },
            "sslConfig": {
              "description": "Client SSL configuration",
              "javaType": "org.openmetadata.schema.security.ssl.SSLConfig",
              "oneOf": [
                {
                  "$schema": "http://json-schema.org/draft-07/schema#",
                  "title": "Validate SSL Client Config",
                  "description": "OpenMetadata Client configured to validate SSL certificates.",
                  "type": "object",
                  "javaType": "org.openmetadata.schema.security.ssl.ValidateSSLClientConfig",
                  "properties": {
                    "caCertificate": {
                      "title": "Certificate Path",
                      "description": "CA certificate path. E.g., /path/to/public.cert. Will be used if Verify SSL is set to `validate`.",
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false,
          "required": ["provider", "password", "api_token"]
        }
      ]
    },
    "supportsMetadataExtraction": {
      "title": "Supports Metadata Extraction",
      "description": "Supports Metadata Extraction.",
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false,
  "required": ["hostPort", "connection"]
}
